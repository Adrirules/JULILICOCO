  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div id="article">
        <h2> <%= @article.title  %> </h2>
        <%= cl_image_tag @article.photo, height: 600, crop: :fill %>
        <p><%= @article.created_at.strftime("%d/%m/%Y") %> par <%= @article.user.username %></p>
        <p> <%= @article.chapo  %> </p>
        <p> <%= raw @article.content  %> </p>
        <%= social_share_button_tag(@article.title) %>
      </div>
      <div> <h3>Vous allez aimer aussi :</h3></div>
    </div>
  </div>
